<?xml version="1.0" encoding="UTF-8"?>
<phpunit xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:noNamespaceSchemaLocation="vendor/phpunit/phpunit/phpunit.xsd"
    bootstrap="vendor/autoload.php"
    colors="true"
>
    <testsuites>
        <testsuite name="Unit">
            <directory>tests/Unit</directory>
        </testsuite>
        <testsuite name="Feature">
            <directory>tests/Feature</directory>
        </testsuite>
    </testsuites>
    <source>
        <include>
            <directory>app</directory>
        </include>
    </source>
    <php>
        <env name="APP_ENV" value="testing" />
        <env name="APP_MAINTENANCE_DRIVER" value="file" />
        <env name="BCRYPT_ROUNDS" value="4" />
        <env name="CACHE_STORE" value="array" />

        <env name="DB_CONNECTION" value="mysql_test" force="true" />
        <env name="DB_HOST" value="mysql_test" force="true" />
        <env name="DB_PORT" value="3306" force="true" />
        <env name="DB_HOST_PORT" value="3327" force="true" />
        <env name="DB_DATABASE" value="momentum_test" force="true" />
        <env name="DB_USERNAME" value="momentum_test_admin" force="true" />
        <env name="DB_PASSWORD" value="password1" force="true" />
        <env name="DB_ROOT_PASSWORD" value="root_admin" force="true" />


        <env name="TEST_DB_HOST" value="mysql_test" force="true" />
        <env name="TEST_DB_PORT" value="3306" force="true" />
        <env name="TEST_DB_HOST_PORT" value="3327" force="true" />
        <env name="TEST_DB_DATABASE" value="momentum_test" force="true" />
        <env name="TEST_DB_USERNAME" value="momentum_test_admin" force="true" />
        <env name="TEST_DB_PASSWORD" value="password1" force="true" />
        <env name="TEST_DB_ROOT_PASSWORD" value="root_admin" force="true" />

        <env name="MAIL_MAILER" value="array" />
        <env name="PULSE_ENABLED" value="false" />
        <env name="QUEUE_CONNECTION" value="sync" />
        <env name="SESSION_DRIVER" value="array" />
        <env name="TELESCOPE_ENABLED" value="false" />
    </php>
</phpunit>